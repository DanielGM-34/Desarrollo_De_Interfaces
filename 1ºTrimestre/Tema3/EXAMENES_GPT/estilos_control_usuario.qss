QPushButton {
    background-color: #3498db;
    color: white;
    border-radius: 6px;
    padding: 6px 12px;
}
QPushButton:hover { background-color: #2980b9; }
QPushButton:pressed { background-color: #1f5f8b; }

QLineEdit {
    border: 2px solid #3498db;
    border-radius: 5px;
    padding: 4px;
}
QLineEdit:focus { border: 2px solid #e67e22; }

QCheckBox::indicator {
    width: 16px; height: 16px;
    border: 2px solid #7f8c8d;
    border-radius: 3px;
    background: white;
}
QCheckBox::indicator:checked { background: #2ecc71; }
