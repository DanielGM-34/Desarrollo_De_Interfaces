QWidget {
    background-color: #f0f4f8;
    font-family: "Segoe UI";
    font-size: 14px;
    color: #2c3e50;
}

QPushButton {
    background-color: #3498db;
    color: white;
    border-radius: 8px;
    padding: 6px 12px;
    font-weight: bold;
    
}

QPushButton:hover {
    background-color: #1abc9c;
}

QPushButton:pressed {
    background-color: #2980b9;
    padding-top: 2px;
    padding-left: 2px;
}

QLabel {
    padding: 8px;
    font-size: 16px;
    color: #34495e;
}
